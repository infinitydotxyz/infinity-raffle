{
  "name": "infinity-raffle",
  "version": "1.0.0",
  "description": "Module containing the infinity raffle contracts",
  "repository": "https://github.com/infinitydotxyz/infinity-raffle",
  "license": "MIT",
  "scripts": {
    "fmt:sol": "prettier --write 'contracts/**/*.sol'",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "build": "sol-merger \"./contracts/*.sol\" ./build",
    "flatten": "hardhat flatten",
    "deploy:raffle": "hardhat deployDummyRaffle"
  },
  "devDependencies": {
    "@chainlink/contracts": "0.5.1",
    "@nomiclabs/hardhat-ethers": "^2.2.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.4",
    "@openzeppelin/contracts": "^4.8.0",
    "@types/node": "^18.11.18",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "hardhat": "^2.12.5",
    "hardhat-contract-sizer": "^2.6.1",
    "prettier": "^2.8.1",
    "prettier-plugin-solidity": "^1.1.1",
    "rimraf": "^3.0.2",
    "sol-merger": "^4.1.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.7.22",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  },
  "prettier": {
    "tabWidth": 2,
    "printWidth": 120,
    "singleQuote": true,
    "trailingComma": "none",
    "semi": true
  }
}
