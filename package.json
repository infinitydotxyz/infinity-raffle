{
  "name": "infinity-raffle",
  "version": "1.0.0",
  "description": "Module containing the infinity raffle contracts",
  "repository": "https://github.com/infinitydotxyz/infinity-raffle",
  "license": "MIT",
  "scripts": {
    "fmt:sol": "prettier --write 'contracts/**/*.sol'",
    "lint:sol": "solhint 'contracts/**/*.sol'",
    "build": "sol-merger \"./contracts/*.sol\" ./build",
    "flatten": "hardhat flatten",
    "deploy:raffle": "hardhat deployDummyRaffle"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.4.1",
    "@nomiclabs/hardhat-ethers": "^2.1.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.0",
    "@openzeppelin/contracts": "^4.7.3",
    "@types/node": "^18.7.16",
    "cross-env": "^7.0.3",
    "dotenv": "^16.0.2",
    "ethers": "^5.7.0",
    "hardhat": "^2.11.1",
    "hardhat-contract-sizer": "^2.6.1",
    "prettier": "^2.7.1",
    "prettier-plugin-solidity": "^1.0.0-beta.24",
    "rimraf": "^3.0.2",
    "sol-merger": "^4.1.1",
    "solhint": "^3.3.7",
    "solhint-plugin-prettier": "^0.0.5",
    "solidity-coverage": "^0.8.2",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
